<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#2d3d36"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <!-- Animal Image (loaded from Firebase URL) -->
        <ImageView
            android:id="@+id/animalImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:background="#3a4a43"
            android:contentDescription="Animal image" />

        <!-- Text Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Animal Name (e.g., "Northern Cardinal") -->
            <TextView
                android:id="@+id/animalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animal Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Scientific Name (e.g., "Cardinalis cardinalis") -->
            <TextView
                android:id="@+id/scientificName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scientific name"
                android:textSize="13sp"
                android:textStyle="italic"
                android:textColor="#90CAF9"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- First Sentence of Description -->
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description text..."
                android:textSize="14sp"
                android:textColor="#B0B0B0"
                android:lineSpacingExtra="2dp"
                android:maxLines="3"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>