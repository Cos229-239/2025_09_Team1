<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color (semi-transparent dark) -->
    <solid android:color="#CC000000" />

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Border (gold stroke) -->
    <stroke
        android:width="2dp"
        android:color="#FFD700" />

    <!-- Padding inside -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>