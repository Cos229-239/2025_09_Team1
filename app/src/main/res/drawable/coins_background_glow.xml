<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40FFD700" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Main background -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#2D3748"
                android:endColor="#1A202C"
                android:type="linear" />
            <corners android:radius="22dp" />
            <stroke
                android:width="2dp"
                android:color="#FFD700" />
        </shape>
    </item>
</layer-list>